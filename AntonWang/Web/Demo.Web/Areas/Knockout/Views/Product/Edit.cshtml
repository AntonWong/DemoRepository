    <div data-bind="text: ko.toJSON(selectedChoices)"></div>
<div data-bind="text: selectedChoicesDelimited"></div>
<div data-bind="text: name"></div>
@section script
{
    <script type="text/javascript">
        var id = Request("id");
        var viewModel = {
            Name: ko.observable(),
            Price: ko.observable(),
            product: ko.observable(),
            Categories: ko.observable(),
            choices: [{ Id: "1", Name: "one" }, { Id: "2", Name: "two" }],//["one", "two", "three", "four", "five"],
            selectedChoices: ko.observableArray(["1", "2"])
        };
        viewModel.selectedChoicesDelimited = ko.computed(function() {
            return this.selectedChoices().join(",");
        }, viewModel);
        ko.applyBindings(viewModel);
        $.ajax({
            type: "GET",
            url: apiUri + "Categories"
        }).done(function(data) {
            viewModel.Name(data);
        }).error(function(jqXHR) {
            alert(eval("(" + jqXHR.responseText + ")").error.message);
        });
        $.ajax({
            type: "GET",
            url: apiUri + "Suppliers"
        }).done(function(data) {
            // vmProd.oProds(data.value);
        }).error(function(jqXHR) {
            alert(eval("(" + jqXHR.responseText + ")").error.message);
        });
        $.ajax({
            type: "GET",
            url: apiUri + "Products(" + id + ")"
        }).done(function(data) {
            viewModel.Name(data.Name);
            viewModel.Price(data.Price);


            // alert(viewModel.product.Name);

            // vmProd.oProds(data.value);
        }).error(function(jqXHR) {
            alert(eval("(" + jqXHR.responseText + ")").error.message);
        });
    </script>
}
     
