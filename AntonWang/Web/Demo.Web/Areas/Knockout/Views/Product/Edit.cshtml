@section title{<title>产品编辑</title>}


<form class="form-horizontal" role="form">
    <input  data-bind="value:product.Id" name="Id" type="hidden"/>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">名称</label>
        <div class="col-sm-2">
            

            <input data-bind="value:Name" type="text" class="form-control" id="name" placeholder="名称">
        </div>
    </div>
    
    <div class="form-group">
        <label for="price" class="col-sm-2 control-label">价格</label>
        <div class="col-sm-2">
            <input data-bind="value:Price" type="text" class="form-control" id="price" placeholder="价格">
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label">分类</label>
        <!--方法1 -->
        <div class="col-sm-2" data-bind="template: { name: 'choiceTmpl', foreach: choices, templateOptions: { selections: selectedChoices } }" >
        </div>
        <script id="choiceTmpl" type="text/html">
            <label class="checkbox-inline">
                <input type="checkbox" data-bind="attr: { value: $data.Id }, checked: $root.selectedChoices" />
                <span data-bind="text: $data.Name"></span>
            </label>
        </script>
    </div>
